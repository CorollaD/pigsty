{
  "service": {
    "name": "{{ pg_cluster }}-primary",
    "port": {{ lb_primary_port }},
    "tags": [
      "{{ pg_cluster }}",
      "primary"
    ],
    "meta": {
      "type": "postgres",
      "lb_role": "{{ lb_role }}",
      "seq": "{{ pg_seq }}",
      "instance": "{{ pg_cluster }}-{{ pg_seq }}",
      "service": "{{ pg_cluster }}-{{ pg_role }}",
      "cluster": "{{ pg_cluster }}",
      "version": "{{ pg_version }}"
    },
    "check": {
      "tcp": "{{ inventory_hostname }}:{{ lb_primary_port }}",
      "interval": "{{ consul_check_interval }}",
      "timeout": "{{ consul_check_timeout }}"
    }
  }
}