{
  "service": {
    "name": "{{ cluster }}-primary",
    "port": {{ lb_primary_port }},
    "tags": [
      "{{ cluster }}",
      "primary"
    ],
    "meta": {
      "type": "postgres",
      "lb_role": "{{ lb_role }}",
      "seq": "{{ seq }}",
      "instance": "{{ cluster }}-{{seq}}",
      "service": "{{ cluster }}-{{ role }}",
      "cluster": "{{ cluster }}",
      "version": "{{ version }}"
    },
    "check": {
      "tcp": "{{ inventory_hostname }}:{{ lb_primary_port }}",
      "interval": "5s",
      "timeout": "1s"
    }
  }
}