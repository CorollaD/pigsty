{
  "service": {
    "name": "patroni",
    "port": 8008,
    "tags": [
      "patroni",
      "{{ role }}",
      "{{ cluster }}"
    ],
    "meta": {
      "type": "patroni",
      "role": "{{ role }}",
      "seq": "{{ seq }}",
      "instance": "{{ cluster }}-{{seq}}",
      "service": "{{ cluster }}-{{ role }}",
      "cluster": "{{ cluster }}"
    },
    "check": {
      "tcp": "{{ inventory_hostname }}:8008",
      "interval": "5s",
      "timeout": "1s"
    }
  }
}